<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    
    <changeSet id="1" author="Michał Milej">
        <createTable tableName="profile_photo">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="location" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Michał Milej">
        <insert tableName="profile_photo">
            <column name="id" value="1"/>
            <column name="location" value="${filesystem.path.default.profile.photo}"/>
        </insert>
    </changeSet>

    <changeSet id="3" author="Michał Milej">
        <createTable tableName="author">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="second_name" type="varchar(30)"/>
            <column name="last_name" type="varchar(60)">
                <constraints nullable="false"/>
            </column>
            <column name="birth_date" type="date"/>
            <column name="death_date" type="date"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="Michał Milej">
        <createTable tableName="cover">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="location" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="5" author="Michał Milej">
        <createTable tableName="book">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="release_date" type="date"/>
            <column name="description" type="varchar(500)"/>
            <column name="cover_id" type="bigint">
                <constraints foreignKeyName="fk_book_cover" references="cover(id)"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="6" author="Michał Milej">
        <createTable tableName="book_author">
            <column name="author_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_author" references="author(id)"/>
            </column>
            <column name="book_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_book" references="book(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="7" author="Michał Milej">
        <createTable tableName="application_user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(20)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="hashed_password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="profile_photo_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_profile_photo" references="profile_photo(id)"/>
            </column>
            <column name="banned" type="boolean" value="false">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="8" author="Michał Milej">
        <createTable tableName="publisher">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="9" author="Michał Milej">
        <createTable tableName="publisher_book">
            <column name="publisher_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_publisher" references="publisher(id)"/>
            </column>
            <column name="book_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_book" references="book(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="10" author="Michał Milej">
        <createTable tableName="review">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="text" type="varchar(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="publication_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="likes" type="integer" value="0">
                <constraints nullable="false"/>
            </column>
            <column name="dislikes" type="integer" value="0">
                <constraints nullable="false"/>
            </column>
            <column name="book_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_book" references="book(id)"/>
            </column>
            <column name="application_user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_application_user" references="application_user(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="11" author="Michał Milej">
        <insert tableName="author">
            <column name="id">1</column>
            <column name="first_name">Adam</column>
            <column name="second_name">Bernard</column>
            <column name="last_name">Mickiewicz</column>
            <column name="birth_date">1798-12-24</column>
            <column name="death_date">1855-11-26</column>
        </insert>
        <insert tableName="author">
            <column name="id">2</column>
            <column name="first_name">Bolesław</column>
            <column name="last_name">Prus</column>
            <column name="birth_date">1847-08-20</column>
            <column name="death_date">1912-05-19</column>
        </insert>
        <insert tableName="author">
            <column name="id">3</column>
            <column name="first_name">Henryk</column>
            <column name="second_name">Adam Aleksander</column>
            <column name="last_name">Sienkiewicz</column>
            <column name="birth_date">1846-05-05</column>
            <column name="death_date">1916-11-15</column>
        </insert>
    </changeSet>

    <changeSet id="12" author="Michał Milej">
        <createTable tableName="review_user_reaction">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="reaction" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="application_user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_application_user" references="application_user(id)"/>
            </column>
            <column name="review_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_review" references="review(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>